<div class="md:max-w-lg max-w-none mx-auto min-h-full">
  <%# cover photo %>
  <div class="h-32 overflow-hidden">
    <img src="<%= asset_path('vw-baloon.webp')%>" alt="" class="object-cover h-full w-full">
  </div>
  <div class="bg-base-100 md:p-8 p-4">
    <div class="flex space-x-4 -mt-12">
      <img class="mb-3 w-24 h-24 rounded-full border-white border-2 " src="<%= asset_path('vw-logo.jpeg')%>" alt="product designer">
      <div class="flex flex-col justify-center h-32">
        <h1 class="card-title  md:text-xl text-lg font-semibold">VW Borobudur Enjoy </h1>
        <h3 class=" md:text-lg text-base text-primary"> Sempurnakan liburanmu bersama kami </h3>
      </div>
    </div>
    <%# call out %>
    <div class="card bg-primary p-4">
      <span class="card-title md:text-lg text-base">Tentukan jadwal liburanmu sekarang!</span>
      <form action="" method="get">
        <div class="card md:flex-row flex-col md:space-x-2 md:space-y-0 space-y-2 space-x-0">
          <div class="w-full flex flex-col md:items-start">
            <label for="tanggal" class="label label-text">Tanggal</label>
            <input type="date" id="tanggal" class="input input-bordered w-full border-2 border-gray-700" required>
          </div>
          <div class="flex flex-col md:items-start">
            <label for="jam" class="label label-text">Jam</label>
            <select class="form-control select select-bordered border-2 border-gray-700" required>
              <option>09 : 00</option>
              <option>10 : 00</option>
              <option disabled>11 : 00</option>
              <option>12 : 00</option>
              <option>13 : 00</option>
              <option>14 : 00</option>
              <option>15 : 00</option>
            </select>
          </div>
          <div class="flex md:items-end">
            <input type="submit" value="Pilih" class="w-full btn btn-info border-2 hover:border-base-100 hover:text-base-100 border-gray-700">
          </div>
        </div>
      </form>
    </div>
    <%# cards %>
    <div class="mt-4 space-y-4">
      <span class="card-title md:text-lg text-base">Daftar Paket</span>
      <div class="card w-full bg-white border-2 border-gray-700">
        <div class="card-body">
          <div class="card-title flex justify-between md:text-lg text-base">
            <h2>Short Trip</h2>
            <h2 class="text-primary">350K/VW</h2>
          </div>
          <div class="flex flex-col items-end md:text-base text-sm">
            <p>2 Destinasi Wisata</p>
            <p>Durasi 2 jam</p>
          </div>
        </div>
      </div>
      <div class="card w-full bg-white border-2 border-gray-700">
        <div class="card-body">
          <div class="card-title flex justify-between md:text-lg text-base">
            <h2>Medium</h2>
            <h2 class="text-primary">450K/VW</h2>
          </div>
          <div class="flex flex-col items-end md:text-base text-sm">
            <p>3 Destinasi Wisata</p>
            <p>Durasi 3 jam</p>
          </div>
        </div>
      </div>
      <div class="card w-full bg-white border-2 border-gray-700">
        <div class="card-body">
          <div class="card-title flex justify-between md:text-lg text-base">
            <h2>Long</h2>
            <h2 class="text-primary">650K/VW</h2>
          </div>
          <div class="flex flex-col items-end md:text-base text-sm">
            <p>4 Destinasi Wisata</p>
            <p>Durasi 5 jam</p>
          </div>
        </div>
      </div>
      <div class="card w-full bg-white border-2 border-gray-700">
        <div class="card-body">
          <div class="card-title flex justify-between md:text-lg text-base">
            <h2>Sunrise</h2>
            <h2 class="text-primary">500K/VW</h2>
          </div>
          <div class="flex flex-col items-end md:text-base text-sm">
            <p>3 Destinasi Wisata</p>
            <p>Durasi 3,5 jam</p>
          </div>
        </div>
      </div>
    </div>
